# Apache configuration per SPA (Single Page Application)
# Questo file permette a React Router di gestire il routing lato client
# Serve sempre index.html per tutte le route (fallback)

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Se il file richiesto esiste, servilo direttamente
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # Altrimenti, reindirizza a index.html (mantenendo query string e hash)
  RewriteRule . /index.html [L]
</IfModule>

# Headers per sicurezza e performance
<IfModule mod_headers.c>
  # Cache per assets statici
  <FilesMatch "\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # No cache per index.html (per aggiornamenti)
  <FilesMatch "index\.html$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
  </FilesMatch>
</IfModule>

